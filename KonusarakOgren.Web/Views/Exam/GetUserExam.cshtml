@using KonusarakOgren.Entity.Response

@{
    ViewData["Title"] = "GetUserExam";
}
@model IList<UserExamResponse>

<div class="text-center mb-4">
    <h1 class="display-4">Sınavlarım</h1>
</div>
<br />
<a class="btn btn-primary" href="/Exam">Sınava gir</a>
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Başlık</th>
            <th scope="col">Tarih</th>
            <th scope="col">Sil</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.ArticleTitle</td>
                <td>@item.ExamDate</td>
                <td><a href="#" class="exam-delete-btn" data-id = @item.Id>Sil</a></td>
            </tr>
        }
    </tbody>
</table>


<script>       
    $(document).ready(function () {
        $('.exam-delete-btn').click(function () {
            var id = $(this).attr('data-id');
            $.post("/Exam/Delete/" + id, function () {
                location.reload();
            });
        });
    });
</script>